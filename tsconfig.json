{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "incremental": true,
    "skipLibCheck": true,

    "strict": false,
    "types": ["node"],
    "baseUrl": "./"
  }
}
